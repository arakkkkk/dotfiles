{
  // カラーテーマをNeovimに近いものに設定
  "workbench.colorTheme": "Gruvbox Dark (Community)",
  // フォント設定（Neovimでよく使われるJetBrains Monoなどを推奨）
  "editor.fontFamily": "'JetBrains Mono', 'Droid Sans Mono', 'monospace', 'Courier New'",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  // Vimプラグインの有効化
  "vim.enableNeovim": true,
  "vim.useSystemClipboard": true, // システムクリップボードと連携
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "jk"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "s",
        "s"
      ],
      "after": [
        "\"",
        "a",
        "d",
        "d",
        "P"
      ]
    },
    {
      "before": [
        "<S-l>"
      ], // Ctrl+Lで次のファイル
      "commands": [
        "workbench.action.nextEditor"
      ]
    },
    {
      "before": [
        "<S-h>"
      ], // Ctrl+Hで前のファイル
      "commands": [
        "workbench.action.previousEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "c"
      ], // Leaderキー + cでファイルを閉じる
      "commands": [
        "workbench.action.closeActiveEditor"
      ]
    },
    {
      "before": [
        "<leader>",
        "e"
      ], // space+Eでエクスプローラーを開く
      "commands": [
        "workbench.view.explorer"
      ]
    },
    {
      "before": [
        "<leader>",
        "f",
        "f"
      ], // Leaderキー + ffでファイル検索
      "commands": [
        "workbench.action.quickOpen"
      ]
    },
    {
      "before": [
        "<leader>",
        "f",
        "g"
      ], // Leaderキー + fgで文字列検索
      "commands": [
        "workbench.action.findInFiles"
      ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        "s"
      ],
      "after": [
        "\"",
        "a",
        "d",
        "P"
      ]
    }
  ],
  // エディタの動作をNeovimに近づける
  "editor.cursorBlinking": "solid",
  "editor.lineNumbers": "relative",
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  "editor.wordWrap": "off",
  // タブやインデントの設定
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  // ファイル保存時の自動フォーマット
  "editor.formatOnSave": true,
  // ターミナルの設定（Neovimのような見た目に）
  "terminal.integrated.fontFamily": "'JetBrains Mono', 'monospace'",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorStyle": "block",
  // その他便利な設定
  "files.autoSave": "onFocusChange",
  "workbench.startupEditor": "newUntitledFile",
  "explorer.confirmDelete": false,
  // 拡張機能の設定
  "vim.hlsearch": true, // 検索時にハイライトを有効化
  "vim.incsearch": true, // インクリメンタルサーチを有効化
  "vim.leader": "<space>", // リーダーキーをスペースに設定
  "vim.autoSwitchInputMethod.enable": true, // 入力モード切り替えを自動化（必要に応じて）
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC" // Macの場合の例
}
