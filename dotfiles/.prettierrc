{
    "printWidth": 120,
    "singleQuote": false,
    "trailingComma": "none",
    "semi": true,

    "overrides": [
        {
            "files": ["*.md"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.py"],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": ["*.go"],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": ["*.html"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.json"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": ["*.js, *.jsx, *.ts, *.tsx"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
