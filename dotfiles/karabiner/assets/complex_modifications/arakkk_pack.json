{
  "title": "arakkk: Comfortable text navigation (Vim)",
  "rules": [
    {
      "description": "Change left_command+left_control+,hjkl, o in arrow keys",
      "manipulators": [
        {
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["left_command", "left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["left_command", "left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["left_command", "left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["left_command", "left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "support control+a/e",
      "manipulators": [
        {
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "com.googlecode.iterm2",
                "com.microsoft.VSCode",
                "org.mozilla.firefox",
                "md.obsidian"
              ]
            }
          ]
        },
        {
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "com.googlecode.iterm2",
                "com.microsoft.VSCode",
                "org.mozilla.firefox",
                "md.obsidian"
              ]
            }
          ]
        },
        {
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "com.googlecode.iterm2",
                "com.microsoft.VSCode",
                "org.mozilla.firefox",
                "md.obsidian"
              ]
            }
          ]
        },
        {
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": ["left_shift"]
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "com.googlecode.iterm2",
                "com.microsoft.VSCode",
                "org.mozilla.firefox",
                "md.obsidian"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Change d, p -> yank paste in arrow keys",
      "manipulators": [
        {
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": ["left_command", "left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_command"]
            },
            {
              "key_code": "left_arrow",
              "modifiers": ["left_command", "left_shift"]
            },
            {
              "key_code": "x",
              "modifiers": ["left_command"]
            },
            {
              "key_code": "return_or_enter"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["left_command", "left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_command"]
            },
            {
              "key_code": "return_or_enter"
            },
            {
              "key_code": "v",
              "modifiers": ["left_command"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "y",
            "modifiers": {
              "mandatory": ["left_command", "left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_command"]
            },
            {
              "key_code": "left_arrow",
              "modifiers": ["left_command", "left_shift"]
            },
            {
              "key_code": "v",
              "modifiers": ["left_command"]
            },
            {
              "key_code": "return_or_enter"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "support control+h",
      "manipulators": [
        {
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["left_control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace"
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "com.googlecode.iterm2",
                "com.microsoft.VSCode",
                "org.mozilla.firefox",
                "md.obsidian"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "support control+n/p",
      "manipulators": [
        {
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "<C-c> to <Esc>",
      "manipulators": [
        {
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "com.googlecode.iterm2",
                "com.microsoft.VSCode",
                "org.mozilla.firefox",
                "md.obsidian"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "move-space",
      "manipulators": [
        {
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "iterm supp",
      "manipulators": [
        {
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "japanese_eisuu"
            },
            {
              "key_code": "c",
              "modifiers": ["left_control"]
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.googlecode.iterm2"]
            }
          ]
        }
      ]
    },
    {
      "description": "iterm unused",
      "manipulators": [
        {
          "from": {
            "key_code": "r",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "shell_command": "open -a 'iterm'"
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.googlecode.iterm2"]
            }
          ]
        },
        {
          "from": {
            "key_code": "m",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "m",
              "modifiers": ["left_control"]
            }
          ],
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.googlecode.iterm2"]
            }
          ]
        }
      ]
    }
  ]
}
